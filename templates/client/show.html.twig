<h5 class="card-header bg-secondary text-light" ><i class="fa fa-eye"></i>
    Ver Client </h5>
<hr/>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ client.lastName }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ client.address }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ client.dateCreation ? client.dateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ client.enabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
<hr/>
<ul>
    <li style="display: inline-flex">
        <a href="{{ path('app_client_index') }}" class="btn btn-outline-info btn-back" data-toggle="tooltip" data-placement="top"
           title="Volver"
        ><i class="fa fa-arrow-left"></i></a>
    </li>
    <li style="display: inline-flex">
        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-outline-info btn-back" data-toggle="tooltip" data-placement="top"
           title="Editar"
        ><i class="fa fa-edit"></i></a>
    </li>
    <li style="display: inline-flex">
        {{ include('client/_delete_form.html.twig') }}
    </li>
</ul>
