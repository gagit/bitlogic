<h5 class="card-header bg-secondary text-light" ><i class="fa fa-eye"></i>
    Datos Cliente </h5>
<hr/>
    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ client.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ client.name }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ client.lastName }}</td>
            </tr>
            <tr>
                <th>Domicilio</th>
                <td>{{ client.address }}</td>
            </tr>
            <tr>
                <th>Fecha Nac.</th>
                <td>{{ client.dateCreation ? client.dateCreation|date('d/m/Y') : '' }}</td>
            </tr>
            <tr>
                <th>Enabled</th>
                <td>{{ client.enabled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
<hr/>
<div class="container">
    <p><strong>Identificaciones</strong></p>
    {% for identificacion in client.identifications %}
        <div class="row ">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <ul class="list-group-item-dark">
                    <li class="list-group-item list-group-item-action" >
                        {{ identificacion }}
                    </li>
                </ul>
            </div>
        </div>
    {% endfor %}
</div>
<hr/>
<div class="container">
    <p><strong>Contactos</strong></p>
    {% for contact in client.contacts %}
        <div class="row ">
            <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <ul class="list-group-item-dark">
                    <li class="list-group-item list-group-item-action" >
                        {{ contact }}
                    </li>
                </ul>
            </div>
        </div>
    {% endfor %}
</div>

<hr/>
<ul>
    <li style="display: inline-flex">
        <a href="{{ path('app_client_tramasica_index') }}" class="btn btn-outline-info btn-back" data-toggle="tooltip" data-placement="top"
           title="Volver"
        ><i class="fa fa-arrow-left"></i></a>
    </li>
    <li style="display: inline-flex">
        <a href="{{ path('app_client_tramasica_edit', {'id': client.id}) }}" class="btn btn-outline-info btn-back" data-toggle="tooltip" data-placement="top"
           title="Editar"
        ><i class="fa fa-edit"></i></a>
    </li>
    <li style="display: inline-flex">
        {{ include('client/_delete_form.html.twig') }}
    </li>
</ul>
