{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('app_login') }}" method="post">
{#        <label for="username">Email:</label>#}
{#        <input type="text" id="username" name="_username" value="{{ last_username }}">#}

{#        <label for="password">Password:</label>#}
{#        <input type="password" id="password" name="_password">#}

{#        #}{# If you want to control the URL the user is redirected to on success#}
{#        <input type="hidden" name="_target_path" value="/account"> #}

{#        <button type="submit">login</button>#}

        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card shadow">
                    <h5 class="card-header bg-secondary text-light">
                        Ingreso al sistema
                    </h5>

                    <div class="card-body">
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Usted ingreso como: {{ app.user.username }}, <a href="{{ path('app_logout') }}">Salir</a>
                            </div>
                        {% endif %}

                        <div class="row">
                            <div class="col-md form-group">
                                <label for="inputUsername">Username</label>
                                <input type="text" value="{{ last_username }}"
                                       id="username" name="_username"
                                       class="form-control" required autofocus>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md form-group">
                                <label for="inputPassword">Password</label>
                                <input type="password" id="password" name="_password"
                                       class="form-control" required>
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}" >
                        {#                        <label>#}
                        {#                            <input type="checkbox" name="_remember_me" checked/>#}
                        {#                            {{'usuario.messages.remember-me'| trans({},'usuario_messages') }}#}
                        {#                        </label>#}
                        <div class="row">
                            <div class="col-md form-group">
                                <button class="btn btn-info" type="submit">
                                    Ingresar
                                </button>
                            </div>
                        </div>
                        <div>
                            <small>
{#                                <a href="{{ path('app_reset_password', {'token': 'x'}) }}">#}
{#                                    Si olvidaste tu clave o tienes que resetear, click aquí</a>#}
                            </small>
                        </div>
                        <hr/>
                        <div>
                            {#                            <small>#}
                            {#                            {{'usuario.messages.forgot-password'| trans({},'usuario_messages') }}#}
                            {#                                <a href="{{ path('register_new_company') }}">Si no estas registrado click aquí</a>#}
                            {#                            </small>#}
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </form>

{% endblock %}
